<div class="divider-column">
  <div class="ui vertical divider" style="height: 100%;">
    <i class="ui icon right arrow"></i>
  </div>
</div>
<div class="eight wide column">
  {{#liquid-bind model use='toUp'}}
    <div class="ui raised segment scrollable-menus">
      <h4 class="ui dividing header">
        {{model.firstObject.menu2}}
      </h4>
      <div class="ui selection list">
        {{#each model as |dataSet|}}
          {{#link-to 'datasets' dataSet.id class='item'}}
            <div class="content">
              <div class="header">{{dataSet.menu3}}</div>
              <div class="description">{{category.values.length}} datasets</div>
            </div>
          {{/link-to}}
        {{/each}}
      </div>  
    </div>
  {{/liquid-bind}}
  {{outlet}}
</div>
